{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "My Zuplo API"
  },
  "paths": {
    "/graphql": {
      "x-zuplo-path": {
        "pathMode": "open-api"
      },
      "post": {
        "summary": "GraphLQ",
        "description": "",
        "x-zuplo-route": {
          "corsPolicy": "none",
          "handler": {
            "export": "urlRewriteHandler",
            "module": "$import(@zuplo/runtime)",
            "options": {
              "rewritePattern": "https://rickandmortyapi.com/graphql"
            }
          },
          "policies": {
            "inbound": [
              "api-key-inbound"
            ]
          },
          "mcp": {
            "type": "graphql",
            "introspectionTool": {},
            "executeTool": {}
          }
        },
        "operationId": "graphql"
      }
    },
    "/mcp": {
      "x-zuplo-path": {
        "pathMode": "open-api"
      },
      "post": {
        "summary": "MCP Server",
        "description": "Exposes information about Rick & Morty from the unofficial GraphQL API. Can get information about characters, seasons, episodes and more. Use the graphql_introspect tool to understand the structure before making requests.",
        "x-zuplo-route": {
          "corsPolicy": "none",
          "handler": {
            "export": "mcpServerHandler",
            "module": "$import(@zuplo/runtime)",
            "options": {
              "operations": [
                {
                  "file": "./config/routes.oas.json",
                  "id": "graphql"
                }
              ],
              "name": "Rick & Morty GraphQL"
            }
          },
          "policies": {
            "inbound": []
          }
        },
        "operationId": "6452db15-aef0-402f-9212-ea8195535b94"
      }
    }
  }
}